<robot name = "2D_Ground">

  <material name = "green">
    <color rgba = "0 0.5 0 1"/>
  </material>

  <link name = "ground">
    <visual>
      <origin xyz="0 0 -1"/>
      <geometry>
        <box size = "100 1 2"/>
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin xyz="0 0 -1"/>
      <geometry>
        <box size = "100 1 2"/>
      </geometry>
    </collision>
  </link>


  <joint name ="ground_is_world" type="fixed">
    <parent link ="world"/>
    <child link = "ground"/>
  </joint>

</robot>
